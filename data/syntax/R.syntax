filepatterns
{*.r}

vimsyntax
{r}

matchcharsallowed
{curly square paren double single}

escapes
{1}

tabsallowed
{0}

casesensitive
{1}

indent
{\{}

unindent
{\}}

icomment {{#}}

lcomments {{#}}

strings {{"} {'}}

keywords
{
  if else repeat while function for in next break Inf
}

numbers {
  HighlightRegexp {\m([0-9]+|0[Xx][0-9a-fA-F]+|[0-9]+(\.[0-9]+)?[eE][+-]?[0-9]+)[Ll]?}
}

punctuation
{
  HighlightRegexp {[][\{\}()<>=!&|~$@:;.^%*/+-]} {}
}

precompile {
  HighlightRegexp {#line}
}

