filepatterns
{*.sh}

matchcharsallowed
{paren double single}

tabsallowed
{0}

casesensitive
{1}

lcomments {{^[ \t]*#}}

strings {{"} {'} {`}}

keywords
{
  until while for do done in if then elif else fi case esac select coproc parallel function alias
  declare typeset export readonly local wait disown kill
}

numbers {
  HighlightRegexp {[0-9]+} {}
}

punctuation
{
  HighlightRegexp {[][=+~|>$:@^,%*?<&;!\{\}()]} {}
}
 
