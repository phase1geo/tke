filepatterns
{*.elm}

vimsyntax
{}

reference
{
  {{Language Reference} http://elm-lang.org/docs}
}

completechars
{curly square paren}

matchchars
{curly square paren}

escapes
{1}

tabsallowed
{0}

linewrap
{0}

casesensitive
{1}

indentation
{{curly}}

icomment {{--}}

comments {{{\{-} {-\}}} {-- {$}}}

strings {double single}

keywords
{
  alias
  case
  dist
  else exposing
  if import in
  let
  module
  of
  port
  then type
}

numbers {
  HighlightRegexp {\m([0-9]+|[0-9]+\.[0-9]+)}
}

punctuation
{
  HighlightRegexp {[][\{\}():,<>=?|^*/+-]} {}
}
